<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/forecasted_day_border"
    android:paddingTop="12sp"
    android:paddingBottom="12sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_alignParentLeft="true"
        android:paddingLeft="15sp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/day_of_the_week_text_view"
            android:hint="Wednesday"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/forecasted_day_description_text_view"
            android:hint="Heavy Rain"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentRight="true"
        android:paddingRight="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/forecasted_day_image_view"
            android:src="@drawable/ic__09d"
            android:layout_marginRight="15sp"
            android:layout_width="50sp"
            android:layout_height="50sp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:hint="83°"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:id="@+id/forecasted_high_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:hint="65°"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:id="@+id/forecasted_low_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>